{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "isolatedModules": true,
  "esModuleInterop": true,
  "include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.mts"],
  "exclude": ["*/node_modules/*"]
}
