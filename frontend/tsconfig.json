{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext"
  },
  "isolatedModules": true,
  "esModuleInterop": true,
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["*/node_modules/*"]
}
