{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "build",
    "target": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["*/node_modules/*"]
}
